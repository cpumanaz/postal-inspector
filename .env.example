# Postal Inspector Configuration
# Copy to .env and fill in your values

#=============================================
# REQUIRED: Anthropic API
#=============================================
ANTHROPIC_API_KEY=sk-ant-your-key-here

#=============================================
# Local Mail Server
#=============================================
MAIL_USER=youruser
MAIL_PASS=your-local-mailbox-password
MAIL_DOMAIN=yourdomain.com

#=============================================
# Upstream IMAP (your existing email provider)
#=============================================
UPSTREAM_USER=you@gmail.com
UPSTREAM_PASS=your-app-password
UPSTREAM_SERVER=imap.gmail.com
UPSTREAM_PORT=993

#=============================================
# Processing Settings
#=============================================
FETCH_INTERVAL=300              # Check for new mail every 5 minutes
BRIEFING_HOUR=8                 # Daily briefing at 8am local time
TZ=US/Central                   # Timezone for scheduling

#=============================================
# Advanced (usually don't need to change)
#=============================================
LMTP_HOST=imap                  # Internal LMTP service name
LMTP_PORT=24                    # LMTP port
IMAPS_PORT=993                  # External IMAP port
