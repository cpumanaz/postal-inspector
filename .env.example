# Postal Inspector Configuration
# Copy to .env and customize for your setup

# ===========================================
# TIMEZONE
# ===========================================
TZ=US/Central

# ===========================================
# LOCAL MAIL SERVER (Dovecot IMAP)
# ===========================================
MAIL_USER=youruser
MAIL_PASS=your-secure-password
MAIL_DOMAIN=yourdomain.com

# Ports (change if conflicts on host)
# Note: Only TLS port 993 is exposed (plaintext IMAP disabled for security)
IMAPS_PORT=993

# ===========================================
# UPSTREAM MAIL PROVIDER (Fetchmail)
# ===========================================
# Works with any IMAP provider: Gmail, O365, Fastmail, etc.
UPSTREAM_USER=you@yourdomain.com
UPSTREAM_PASS=your-upstream-password
UPSTREAM_SERVER=imap.yourprovider.com
UPSTREAM_PORT=993

# How often to check upstream (seconds)
FETCH_INTERVAL=300

# ===========================================
# ALIAS-BASED FOLDERS
# ===========================================
# Prefix for dynamic folder creation from email aliases
# Emails to {prefix}folder@domain create/route to that folder
# Example: svc-github@yourdomain.com -> github folder
# Customize to your preferred prefix (svc-, appx-, mail-, etc.)
# Leave empty to disable alias-based folder routing
ALIAS_PREFIX=svc-

# ===========================================
# DAILY BRIEFING
# ===========================================
# Hour to send daily AI briefing (24h format, local time)
BRIEFING_HOUR=8

# ===========================================
# BACKUPS
# ===========================================
BACKUP_DIR=/path/to/backups
BACKUP_RETENTION_DAYS=3
